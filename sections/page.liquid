{%- liquid
  assign options = section.settings
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign color_scheme = options.color_scheme
  assign container_size = options.container_size
  assign show_heading = options.show_heading
  assign heading_size = options.heading_size
  assign heading_size_mobile = options.heading_size_mobile
  assign content_alignment = options.content_alignment
  assign text_transform = options.text_transform
-%}

{% capture css %}
  {% style %}
    .section-{{section.id}} {
        --gsc-section-spacing-top: {{ section_spacing_top }}px;
        --gsc-section-spacing-bottom: {{ section_spacing_bottom }}px;
    }
    .page_title-left {
      text-align: left;
    }
    .page_title-center {
      text-align: center;
    }
    .page_title-text_transform-uppercase {
      text-transform: uppercase;
    }
    .page_title-text_transform-capitalize {
      text-transform: capitalize;
    }
    .page_title-text_transform-lowercase {
      text-transform: lowercase;
    }
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<div class='section section-{{ section.id }} color-{{ color_scheme }}'>
  <div class='container container--{{ container_size }} section-spacing'>
    {%- if page.title != blank and show_heading -%}
      <h5 class='page__title {{ heading_size }} mobile--{{ heading_size_mobile }} page_title-{{ content_alignment }} page_title-text_transform-{{ text_transform }}'>{{ page.title }}</h5>
    {%- endif -%}
    {%- if page.content != blank -%}
      <div class='page__content rte rte--page'>
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>
</div>

{% render 'save-section-data-in-global-scope', section: section %}

