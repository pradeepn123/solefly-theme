{{ 'hover-change-image.css' | asset_url | stylesheet_tag }}

{%- liquid
    assign options = section.settings
  
    assign color_scheme = options.color_scheme
    assign section_spacing_top = options.section_spacing_top
    assign section_spacing_bottom = options.section_spacing_bottom
    assign desktop_row_height = options.desktop_row_height
    assign mobile_row_height = options.mobile_row_height
    assign desktop_space_between_cards = options.desktop_space_between_cards | times: 0.1
    assign mobile_space_between_cards = options.mobile_space_between_cards | times: 0.1
    assign container_size = options.container_size
    assign title = options.title
    assign alignment = options.alignment
    assign heading_size = options.heading_size
    assign heading_size_mobile = options.heading_size_mobile
    assign columns = options.columns
  
    assign mobile_layout = options.mobile_layout
  -%}


    

    
      
        
          {% comment %} {{ grid }}
        </div>

        <div class='collage__mobile-content'>
          {% if mobile_layout contains 'column' %}
            {{ grid }}
          {% else %}
            {{ mobile_carousel }}
          {% endif %}
        </div>
      </div> {% endcomment %}
    

<div class='hover_change_image__container container container--{{ container_size }} section-spacing'>
    {%- if title != blank -%}
        <div class='collage__header {% if alignment == 'center' %}collage__header--center{% endif %}'>
          <h5 class='collage__title {{ heading_size }} mobile--{{ heading_size_mobile }}'>{{ title }}</h5>
        </div>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
        <div class='collage__blocks'>
            <div class='collage__desktop-content'>
                <div class="hover_change_image__card-grid">
                    <div class="nav-area">
                        <ul>
                            {% for block in section.blocks %}
                                <li>
                                    <a href="#" onmouseenter="changeImg('{{ block.settings.image }}')"> 
                                        {{ block.settings.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="image-area">
                        <div class="image-area__wrapper">
                            {% for block in section.blocks %}
                                <div class="image-area__padding">
                                    <img {% render 'image-attributes', image: block.settings.image, size: 'small', parent_fit: 'cover', class: 'before-after__image slider' %}>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                <div>
            </div>
        </div>
    {%- endif -%}
</div>

<script>
    function changeImg(imageUrl) {
        var imageElement = document.querySelector('.image-area__wrapper .slider');
        imageElement.src = imageUrl;
    }
</script>

